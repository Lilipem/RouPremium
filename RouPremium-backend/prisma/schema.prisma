generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id              Int      @id @default(autoincrement())
  nome            String
  metodoPagamento String   @map("metodo_pagamento") // Mapeia para a coluna metodo_pagamento no DB
  compras         Compra[]
  carrinho        CarrinhoItem[]

  @@map("clientes")
}

model Produto {
  id       Int      @id @default(autoincrement())
  nome     String   @unique
  preco    Decimal  @db.Decimal(10, 2)
  carrinho CarrinhoItem[]

  @@map("produtos")
}

model CarrinhoItem {
  clienteId Int
  produtoId Int
  quantidade Int @default(1)

  cliente Cliente @relation(fields: [clienteId], references: [id])
  produto Produto @relation(fields: [produtoId], references: [id])

  @@id([clienteId, produtoId]) // Chave prim√°ria composta
  @@map("carrinhos")
}

model Compra {
  id             Int       @id @default(autoincrement())
  clienteId      Int
  data           DateTime  @default(now())
  valorTotal     Decimal   @map("valor_total") @db.Decimal(10, 2)
  itensComprados Json      @map("itens_comprados") 

  cliente Cliente @relation(fields: [clienteId], references: [id])

  @@map("compras")
}